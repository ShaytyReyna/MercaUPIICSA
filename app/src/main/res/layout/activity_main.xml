<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity" android:id="@+id/coordinatorLayout">

    <ImageView
            android:layout_width="239dp"
            android:layout_height="246dp" app:srcCompat="@drawable/icon_upiicsa" android:id="@+id/logoUPIICSA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/logoUPIICSA"/>
    <!--
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="86dp" android:layout_marginBottom="11dp"
            app:layout_constraintBottom_toTopOf="@+id/textView_Hola" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/logoUPIICSA" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.0"-->
    <TextView
            android:text="@string/textView_Hola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView_Hola"
            android:textSize="34sp" android:textColor="#00823F"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/logoUPIICSA"
            app:layout_constraintStart_toStartOf="@+id/logoUPIICSA"
            app:layout_constraintEnd_toEndOf="@+id/logoUPIICSA"
            android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>