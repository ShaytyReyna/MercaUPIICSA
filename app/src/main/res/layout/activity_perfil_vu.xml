<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PerfilVU">

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"

                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"

                      android:gravity="center"
                      android:orientation="vertical" android:id="@+id/linearLayoutSupremo">

            <TextView
                    android:text="Califica al vendedor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/calv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textStyle="bold"
                    android:layout_marginTop="26dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          app:layout_constraintStart_toStartOf="parent"
                          android:orientation="horizontal" android:id="@+id/linearLayoutCalV"
                          app:layout_constraintTop_toBottomOf="@+id/calv" android:layout_marginTop="24dp"
                          app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                        android:layout_width="109dp"
                        android:layout_height="116dp" app:srcCompat="@drawable/user" android:id="@+id/imageView4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/buttonenojao"
                        android:layout_marginStart="12dp"/>
            </LinearLayout>
            <TextView
                    android:text="Nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.493" app:layout_constraintTop_toBottomOf="@+id/imageView4"
                    android:layout_marginTop="8dp"/>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          app:layout_constraintStart_toStartOf="parent"
                          android:orientation="vertical" android:id="@+id/linearLayoutInfV"
                          app:layout_constraintTop_toBottomOf="@+id/user" android:layout_marginTop="8dp"
                          app:layout_constraintEnd_toEndOf="parent">
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              app:layout_constraintStart_toStartOf="parent"
                              android:gravity="center"
                              android:orientation="horizontal" android:id="@+id/linearLayoutTel"

                              app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:srcCompat="@drawable/telefono"
                            android:id="@+id/imageView6"
                            app:layout_constraintEnd_toStartOf="@+id/telvendedor"
                            android:layout_marginEnd="16dp"/>
                    <TextView
                            android:text="55########"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/telvendedor"

                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintHorizontal_bias="0.498"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                </LinearLayout>

                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              app:layout_constraintStart_toStartOf="parent"

                              android:orientation="horizontal" android:id="@+id/linearLayoutFace"
                              app:layout_constraintTop_toBottomOf="@+id/linearLayoutTel" android:layout_marginTop="8dp"
                              app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp" app:srcCompat="@drawable/facebook" android:id="@+id/imageView5"
                            app:layout_constraintEnd_toStartOf="@+id/facevendedor"
                            android:layout_marginEnd="16dp"/>
                    <TextView
                            android:text="usuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/facevendedor"

                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                    android:text="Productos" android:layout_marginStart="-136dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/Productos"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.08"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutFace" android:layout_marginTop="32dp"/>


            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"

                          app:layout_constraintEnd_toEndOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          android:background="#AAADAD"
                          android:gravity="center"
                          android:orientation="vertical" android:id="@+id/linearLayout"
                          app:layout_constraintTop_toBottomOf="@+id/Productos" android:layout_marginTop="8dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_gallery"
                        android:id="@+id/imageProducto1"
                        tools:layout_editor_absoluteX="114dp"/>
                <TextView
                        android:text="Nombre_Producto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/NProducto1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageProducto1"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                        android:text="$$$$.$$"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/PProducto1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/NProducto1"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                        android:text="Tipo_producto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/TProducto1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/PProducto1"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"

                          app:layout_constraintEnd_toEndOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          android:background="#AAADAD"
                          android:gravity="center"
                          android:orientation="vertical" android:id="@+id/linearLayout2"
                          app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginTop="16dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_gallery"
                        android:id="@+id/imageProducto2"
                        tools:layout_editor_absoluteX="114dp"/>
                <TextView
                        android:text="Nombre_Producto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/NProducto2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageProducto1"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                        android:text="$$$$.$$"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/PProducto2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/NProducto1"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                        android:text="Tipo_producto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/TProducto2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/PProducto1"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            </LinearLayout>


            <TextView
                    android:text="Horarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textStyle="bold"

                    android:layout_marginStart="-142dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutP" android:layout_marginTop="24dp"/>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          app:layout_constraintStart_toStartOf="parent"
                          android:gravity="center"
                          android:orientation="horizontal" android:id="@+id/linearLayoutHL"
                          app:layout_constraintTop_toBottomOf="@+id/linearLayoutHorio" android:layout_marginTop="8dp"
                          app:layout_constraintEnd_toEndOf="parent">
                <TextView
                        android:text="Lunes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/lunes"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                        android:text="07:00 - 22:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/luneshi"

                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        app:layout_constraintStart_toEndOf="@+id/lunes"
                        android:layout_marginStart="43dp"
                />
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          app:layout_constraintStart_toStartOf="parent"
                          android:gravity="center"
                          android:orientation="horizontal" android:id="@+id/linearLayoutHM"
                          app:layout_constraintTop_toBottomOf="@+id/linearLayoutHL" android:layout_marginTop="8dp"
                          app:layout_constraintEnd_toEndOf="parent">
                <TextView
                        android:text="Martes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/martes"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                        android:text="07:00 - 22:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/marteshi"

                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        app:layout_constraintStart_toEndOf="@+id/martes"
                        android:layout_marginStart="37dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          app:layout_constraintStart_toStartOf="parent"
                          android:gravity="center"
                          android:orientation="horizontal" android:id="@+id/linearLayoutHMi"
                          app:layout_constraintTop_toBottomOf="@+id/linearLayoutHM" android:layout_marginTop="8dp"
                          app:layout_constraintEnd_toEndOf="parent">
                <TextView
                        android:text="Miercoles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/miercoles"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                        android:text="07:00 - 22:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/miercoleshi"

                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        app:layout_constraintStart_toEndOf="@+id/miercoles"
                        android:layout_marginStart="16dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          app:layout_constraintStart_toStartOf="parent"
                          android:gravity="center"
                          android:orientation="horizontal" android:id="@+id/linearLayoutHJ"
                          app:layout_constraintTop_toBottomOf="@+id/linearLayoutHMi" android:layout_marginTop="8dp"
                          app:layout_constraintEnd_toEndOf="parent">
                <TextView
                        android:text="Jueves"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/jueves"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                        android:text="07:00 - 22:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/jueveshi"

                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        app:layout_constraintStart_toEndOf="@+id/jueves"
                        android:layout_marginStart="37dp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          app:layout_constraintStart_toStartOf="parent"
                          android:gravity="center"
                          android:orientation="horizontal" android:id="@+id/linearLayoutHV"
                          app:layout_constraintTop_toBottomOf="@+id/linearLayoutHJ" android:layout_marginTop="8dp"
                          app:layout_constraintEnd_toEndOf="parent">
                <TextView
                        android:text="Viernes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/viernes"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                        android:text="07:00 - 22:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/vierneshi"

                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        app:layout_constraintStart_toEndOf="@+id/viernes"
                        android:layout_marginStart="36dp"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>