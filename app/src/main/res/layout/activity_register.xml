<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
                tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center">

            <TextView
                    android:id="@+id/hola"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hola!"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.061"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    app:layout_constraintHorizontal_bias="0.498"/>

            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/textinputlayoutname"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"

                    android:hint="Nombre"


                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/hola"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textinputname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/textinputlayoutboleta"
                    android:hint="Boleta"

                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textinputlayoutname">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textinputboleta"
                        android:maxLength="10"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                    android:text="Horarios Disponibles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Hdispo"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/textinputlayoutboleta"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


            <TextView
                    android:text="Lunes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lunes"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/Hdispo"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="-157dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/textinputlayoutlunes"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"

                    android:hint="07:00 - 22:00"


                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/lunes"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textinputlunes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                    android:text="Martes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/martes"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textinputlayoutlunes"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="-152dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/textinputlayoutmartes"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"

                    android:hint="07:00 - 22:00"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/martes"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textinputmartes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:text="Miercoles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/miercoles"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textinputlayoutmartes"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="-141dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/textinputlayoutmiercoles"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"

                    android:hint="07:00 - 22:00"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/miercoles"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textinputmiercoles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:text="Jueves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/jueves"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textinputlayoutmiercoles"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="-150dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/textinputlayoutjueves"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"

                    android:hint="07:00 - 22:00"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/jueves"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textinputjueves"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:text="Viernes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/viernes"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textinputlayoutjueves"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="-151dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/textinputlayoutviernes"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:hint="07:00 - 22:00"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/viernes"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textinputviernes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                    android:text="Genera tu contraseña"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Gcontraseña"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/textinputlayoutviernes"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/textinputlayoutcontraseña"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:hint="Contraseña"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/Gcontraseña"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textinputcontraseña"
                        android:layout_width="match_parent"
                        android:inputType="textPassword"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/textinputlayoutcontraseña2"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:hint="Confirmar Contraseña"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textinputlayoutcontraseña"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textinputcontraseña2"
                        android:layout_width="match_parent" android:inputType="textPassword"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:text="Contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contacto"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintTop_toBottomOf="@+id/textinputlayoutcontraseña2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/textinputlayoutcelular"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:hint="Celular"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/contacto"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textinputcelular"
                        android:layout_width="match_parent" android:maxLength="10"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/textinputlayoutfacebook"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:hint="Ususario de Facebook"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textinputlayoutcelular"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textinputfacebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/textinputlayoutinstagram"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:hint="Instagram"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textinputlayoutfacebook"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textinputinstagram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:text="Productos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/productos"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/textinputlayoutinstagram"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <Button
                    android:text="Agregar"
                    android:layout_width="130dp"
                    android:layout_height="59dp" android:id="@+id/agregar"
                    app:layout_constraintTop_toBottomOf="@+id/productos"
                    android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <Button
                    android:text="Log In"
                    android:layout_width="191dp"
                    android:layout_height="62dp" android:id="@+id/login"
                    app:layout_constraintTop_toBottomOf="@+id/agregar" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>