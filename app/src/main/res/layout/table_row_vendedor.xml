<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="5dp"
          android:gravity="center_horizontal"
          android:layout_gravity="center_horizontal"
>
    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <ImageView
                android:id="@+id/colIMG"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/todo"
                tools:ignore="ContentDescription"
                android:layout_marginTop="5dp"
        />
<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView
            android:id="@+id/colNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textStyle="bold"
            android:text="nombre" android:textSize="20sp"/>

    <TextView
            android:id="@+id/colPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:text="$$$" android:textSize="20sp"/>
</LinearLayout>



        <Button
                android:id="@+id/btnPV"
                android:text="@string/ver_perfil_vendedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF67E"
                android:backgroundTint="#9BCF53"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
        />
    </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</TableRow>
